{
  "platform": "django",
  "platformConfig": {
    "pythonVersion": "3.12"
  },
  "static": {
    "/static/": "staticfiles"
  },
  "disks": [
    {
      "name": "database",
      "mountTo": "database"
    },
    {
      "name": "media",
      "mountTo": "media"
    }
  ],
  "build": {
    "commands": [
      "python manage.py collectstatic --noinput"
    ]
  }
}
